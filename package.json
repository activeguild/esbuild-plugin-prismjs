{
  "name": "esbuild-plugin-prismjs",
  "version": "1.0.0",
  "description": "This is a prismjs plugin for esbuild.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && node -r esbuild-register ./tools/build.ts",
    "eslint": "eslint '**/*.ts' --ignore-path .gitignore",
    "prettier": "prettier . --write",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activeguild/esbuild-plugin-prismjs.git"
  },
  "keywords": [
    "esbuild",
    "prism",
    "prismjs",
    "plugin"
  ],
  "author": "j1ngzoue",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/activeguild/esbuild-plugin-prismjs/issues"
  },
  "homepage": "https://github.com/activeguild/esbuild-plugin-prismjs#readme",
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@types/prismjs": "^1.16.6",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "esbuild": "^0.14.10",
    "esbuild-register": "^3.3.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "prismjs": "^1.26.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
